<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:QSelectAvalonia.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="QSelectAvalonia.Controls.PackageArtViewList">
  <Grid>
    <ScrollViewer x:Name="PackageScrollViewer" VerticalScrollBarVisibility="Visible">
      <WrapPanel x:Name="PackageWrapPanel" Width="{Binding $parent[Grid].Bounds.Width}" MaxWidth="1500"/>
    </ScrollViewer>
    <Panel x:Name="DarkenPanel" Background="#7F000000" IsVisible="False">
      <Grid ColumnDefinitions="*, 5*, *" RowDefinitions="*, 5*, *">
        <views:PackageWindow Grid.Row="1" Grid.Column="1" x:Name="PackageWindow"/>
      </Grid>
    </Panel>
  </Grid>
</UserControl>
